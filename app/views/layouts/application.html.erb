<!DOCTYPE html>
<html>
  <head>
    <title>Little Shop Of Funsies</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
    <style>
    .successfully_removed {
            color: green;
    }
    .alert{
      margin-left: auto;
      margin-right: auto;
      width: auto;
      height: auto;
      text-align: center;
    }
    h1 {
            font-family: 'Pacifico', cursive;
            font-size: 65px;
    }
    div.container {
              width:800px;
              height:auto;
              padding: 5px;
      }

    a {
            color: black;
        }
    .center-block {
            display: block;
            margin-right: auto;
            margin-left: auto;
    }

    #left {
      text-align: left;
      float: left;
    }
    #right {
      text-align: right;
      /* Change this to whatever the width of your left column is*/
    }
    .clear {
      clear: both;
    }

    </style>
  </head>

  <body>
    <ul class="nav justify-content-center">
      <% if current_user.nil? %>
        <li class="nav-item">
          <%= link_to 'Login', login_path, class: "nav-link active" %>
        </li>
      <% end %>
      <% if current_user %>
        <li class="nav-item">
          <%= link_to 'Dashboard', dashboard_index_path, class: "nav-link active" %>
        </li>
        <% if current_user.business_manager? || current_user.business_admin? %>
        <%= render partial: "layouts/business_manager" %>
        <% end %>
        <% if current_user.platform_admin %>
          <%= render partial: "layouts/platform_admin" %>
        <% end %>
      <% else %>
      <li class="nav-item">
        <%= link_to 'Sign Up', new_user_path, class: "nav-link active" %>
      </li>
      <% end %>
      <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Categories</a>
          <div class="dropdown-menu">
            <% @categories.each do |category| %>
            <%= link_to category.title, category_path(category.slug), class: "dropdown-item" %>
            <% end %>
          </div>
      </li>
      <li class="nav-item">
        <%= link_to 'Cart', carts_path, class: "btn" %>
        <span class="badge badge-secondary"><%= @cart.total_count %></span>
      </li>
      <% if current_user %>
        <li class="nav-item">
          <%= link_to 'Logout', logout_path, method: :delete, class: "nav-link active" %>
        </li>
      <% end %>

    </ul>
    <% if flash.count > 0  %>
    <div class="center-block" style= "width: 15rem;">
    <div class="alert alert-primary alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <% end  %>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, raw(msg), class: name %>
      <% end %>
    </div>
    </div>
    <div class="container">
      <div class="title">
        <center>
          <h1><%= link_to "Little Shop Of Funsies", root_path %></h1><br />

        </center>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
