<!DOCTYPE html>
<html>
  <head>
    <title>Little Shop Of Funsies</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Pacifico" rel="stylesheet">
    <style>
    .successfully_removed {
            color: green;
    }
    h1 {
            font-family: 'Pacifico', cursive;
            font-size: 65px;
    }
    div {
            width:auto;
            height:auto;
            padding: 5px;
    }
    .center-block {
            display: block;
            margin-right: auto;
            margin-left: auto;
    }
    </style>
  </head>

  <body>
    <ul class="nav justify-content-center">
      <% if current_user %>
        <li class="nav-item">
          <%= link_to 'Logout', logout_path, method: :delete, class: "nav-link active" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Login', login_path, class: "nav-link active" %>
        </li>
      <% end %>
      <% if current_user %>
        <li class="nav-item">
          <%= link_to 'Dashboard', dashboard_index_path, class: "nav-link active" %>
        </li>
      <% else %>
      <li class="nav-item">
        <%= link_to 'Sign Up', new_user_path, class: "nav-link active" %>
      </li>
        <li class="nav-item">
          <%= link_to 'Items', items_path, class: "nav-link active" %>
        </li>
      <% end %>
      <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Categories</a>
          <div class="dropdown-menu">
            <% @categories.each do |category| %>
              <a class="dropdown-item" href="/#{category.title}"><%= category.title %></a>
            <% end %>
          </div>
      </li>
      <li class="nav-item">
        <%= link_to 'Cart', carts_path, class: "btn" %>
        <span class="badge badge-secondary"><%= @cart.total_count %></span>
      </li>
    </ul>
    <div class="container">
      <div class="title">
        <center>
          <h1>Little Shop Of Funsies</h1><br />
          <%= image_tag 'house-of-funsies-banner.png' %>
        </center>
      </div>
    </div>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, raw(msg), class: name %>
    <% end %>

    <%= yield %>
  </body>
</html>
