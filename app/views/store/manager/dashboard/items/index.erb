<center><h1>Your Store Items</h1></center>
<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.price %></td>
      <td><%= truncate(item.description) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
