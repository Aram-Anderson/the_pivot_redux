<center><h1>Your Store Orders</h1></center>
<div class="container">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Customer Name</th>
      <th>Order Total</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.user.full_name %></td>
      <td><%= order.total_price %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
