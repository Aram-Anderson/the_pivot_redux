<div class="container">
    <%= image_tag 'login.png' %>
    <%= link_to image_tag("sign_in_with_google.png"), "/auth/google_oauth2" %>
    <%= link_to "Sign in with Twitter", twitter_login_path %>
  <div class="row">
    <div class="col-3">
    <table class="table">
      <%= form_for(:session, url: login_path) do |f| %>
        <tr>
          <td class="table-light"><%= f.label :email %></td>
          <td class="table-light"><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.label :password %></td>
          <td class="table-light"><%= f.password_field :password %></td>
        </tr>
        <tr class="action">
          <td class="table-light"><%= f.submit name="Login", class: "btn btn-primary" %></td>
          <td class="table-light"><small>Don't have an account with us? <%= link_to "Create an account", new_user_path %>.</small></td>
        </tr>
      <% end %>
    </div>
  </div>
</div>
