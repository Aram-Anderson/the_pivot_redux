<p>To complete your phone number verification, please enter the 4-digit activation code.</p>

<%= form_for(confirmation_path, method: "post", class: "form-horizontal") do %>
  <div class=".form-group">
    <%= label_tag :verification_code, "Verification Code", class: "col-md-2 control-label" %>
    <div class=".col-sm-10">
      <%= text_field_tag :verification_code, nil, class: "form-control" %>
    </div>
    <div class=".form-group">
      <div class=".col-sm-offset-2.col-sm-10">
        <%= submit_tag "Confirm", class: "btn btn-success" %>
      </div>    
    </div>
  </div>
<% end %>
