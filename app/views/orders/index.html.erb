<!DOCTYPE html>
	<head>
		<meta charset="utf-8">
		<title><%= @user.first_name %>'s Orders</title>
	</head>
	<body>
		<h4>Orders:</h4>
		<div>
			<% @user.orders.each do |order| %>
			<ul>
				<ui>Total Price: $<%= order.total_price %></ui>
				<ui><%= order.created_at %></ui>
				<ul>
					<% order.items.each do |item| %>
					<ui> <%= item.title %>: $<%= item.price %></ui>
					<% end %>
				</ul>
			</ul>
			<% end %>
		</div>
		
	</body>
